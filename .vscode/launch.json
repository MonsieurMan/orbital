{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "env": {
                "TS_NODE_PROJECT": "src/core/test"
            },
            "args": [
                "--colors",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "${workspaceRoot}/src/**/*.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ],
    "compounds": []
}